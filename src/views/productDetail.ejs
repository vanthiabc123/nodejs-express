<div class="row mt-5" style="margin-bottom: 50px;">
    <div class="col-4">
      <img style="width: 500px;height:500px;object-fit: cover;" src="<%= data.product.image %>" class="card-img-top" alt="..." />
    </div>
    <div class="col-8">
      <h1><%= data.product.title %></h1>
      <h2><%= data.product.price %></h2>
      <p><%= data.product.description %></p>
      <a href="#" class="btn btn-primary">Add to Cart</a>
    </div>
  </div>
  <div class="container">
    <h3>Comments</h3>
    <% data.comments.forEach(comment => { %>
        <img src="" alt="">
        <div><%= locals.user.userName %></div><br>
        <div><%= comment.content %></div>
        <hr>
    <% }) %>

    <form action="/post-comment" method="post">
        <input type="hidden" name="productId" value="<%= data.product._id %>">
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    <input style="width: 1000px;margin-bottom: 20px;" id="msg" type="text" class="form-control" name="msg" placeholder="Additional Info">
                    <button style="float: right;" type="submit" class="btn btn-success">Bình luận</button>
                </div>
            </div>
        </div>
    </form>
</div>