<h2 style="text-align: center;">Sản Phẩm của chúng tôi</h2>
<div class="row mt-5 gap-3">
    <% data.products.forEach(element => { %>
    <div class="card col-md-4">
      <img style="width: 200px;height: 200px;object-fit: cover;" src="<%= element.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <a href="/product/<%= element.id %>" class="card-title"
          ><%= element.title %></a
        >
        <p class="card-text"><%= element.description %></p>
        <a href="#" class="btn btn-primary">Đặt Hàng Ngay</a>
      </div>
    </div>
    <% }) %>
  </div>